<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="600.0" minWidth="800.0" onKeyPressed="#enterKeyPressed" styleClass="mainPanel" stylesheets="@../css/debrunStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginWindowController">
   <children>
      <FlowPane alignment="CENTER" columnHalignment="CENTER" minHeight="600.0" minWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Pane minHeight="200.0" minWidth="350.0" styleClass="loginPanel" stylesheets="@../css/debrunStyle.css">
               <children>
                  <VBox alignment="TOP_CENTER" minHeight="200.0" minWidth="350.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Label alignment="TOP_CENTER" contentDisplay="CENTER" styleClass="loginPanelTitle" stylesheets="@../css/debrunStyle.css" text="WIZZ AIR DEBRECEN AIRPORT RUN" textAlignment="CENTER">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="loginMessage" alignment="TOP_CENTER" contentDisplay="CENTER" styleClass="loginMessage" stylesheets="@../css/debrunStyle.css" textAlignment="CENTER">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <HBox alignment="TOP_CENTER">
                           <children>
                              <Label minWidth="100.0" text="Felhasználónév">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin></Label>
                              <TextField fx:id="userName" />
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="TOP_CENTER">
                           <children>
                              <Label minWidth="100.0" text="Jelszó">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin></Label>
                              <PasswordField fx:id="password" />
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <Button fx:id="loginBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#checkUser" styleClass="loginBtn" stylesheets="@../css/debrunStyle.css" text="Bejelentkezés">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </Pane>
         </children>
      </FlowPane>
   </children>
</AnchorPane>
